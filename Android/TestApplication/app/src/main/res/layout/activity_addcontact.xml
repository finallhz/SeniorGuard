<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fragment.CommunityFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="80sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="添加联系人"
        android:layout_marginTop="100sp"
        android:gravity="center"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_below="@id/textView5"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginLeft="35sp"
        android:layout_alignParentLeft="true"
        android:text="联系人姓名："
        android:gravity="center"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et1"
        android:layout_below="@id/textView5"
        android:layout_toRightOf="@id/textView6"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:hint="请输入联系人姓名"
        android:gravity="center"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/textView61"
        android:layout_below="@id/textView6"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginLeft="35sp"
        android:layout_alignParentLeft="true"
        android:text="联系人手机："
        android:gravity="center"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et11"

        android:layout_below="@id/et1"
        android:layout_toRightOf="@id/textView61"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:hint="请输入联系人手机"
        android:gravity="center"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/textView62"
        android:layout_below="@id/textView61"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginLeft="35sp"
        android:layout_alignParentLeft="true"
        android:text="联系人邮箱："
        android:gravity="center"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et12"
        android:layout_below="@id/et11"
        android:layout_toRightOf="@id/textView62"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:hint="请输入联系人邮箱"
        android:gravity="center"
        android:textSize="18sp"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确认增加"
        android:id="@+id/login_btn_login"
        android:background="#545bcb"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@id/et12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />
</RelativeLayout>